# PostgreSQL Development Environment Configuration
# Copy this to .env to use PostgreSQL database

# Database Configuration
DATABASE_TYPE=postgresql

# PostgreSQL Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=notesdb

# Alternative: Use full DATABASE_URL (uncomment to use)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/notesdb

# Application Settings
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
